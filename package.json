{
  "name": "dazzle-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript port of OpenJade's DSSSL processor for code generation",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "test:demo": "node packages/dazzle-cli/dist/cli.js -t fot -d tests/print-simple/demo.dsl tests/print-simple/simple.xml",
    "test:sps-css": "node packages/dazzle-cli/dist/cli.js -t fot -d tests/print-simple/sps_css.dsl tests/print-simple/sps_css.sgml"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rschleitzer/dazzle.git"
  },
  "author": "Ralf Schleitzer <r.schleitzer@users.noreply.github.com>",
  "license": "MIT"
}
